{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
  },
  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}
